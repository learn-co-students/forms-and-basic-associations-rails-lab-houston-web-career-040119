<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />


  <%= f.collection_select :genre_id, @genres, :id, :name %><br>

  <% @notes.each_with_index do |note,idx|  %>

  <%= f.label :content %> <%= f.text_field :note_contents, value: "", multiple: true, id:"song_notes_#{idx+1}" %><br>

  <% end %>

  <%= f.submit %>
<% end %>


